<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF7FA"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back! 👋 :)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Upcoming Debates -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have a good day! 🌸"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Debate Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_create"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Debate ✨"
                android:backgroundTint="#FFD3DB"
                android:textColor="#000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Feedback Notification -->
        <TextView
            android:id="@+id/tv_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚠️ AI Feedback for Debate 'Critical Thinking':
🧠 Logic: Sound reasoning is presented, highlighting the necessity of critical thinking in public debates.

🔍 Clarity: The statement is clear and easy to understand, leaving no room for ambiguity.

💬 Impact: Recognizing the significance of critical thinking in public debates can lead to more informed discussions and better decision-making.

🏅 Score: 9/10

(🎙️ Microphone did not record. If it had worked, this is the kind of feedback you would see.)"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="8dp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>