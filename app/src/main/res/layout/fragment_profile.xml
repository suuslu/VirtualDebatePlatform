<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F0"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFF4E8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_circle"
                android:backgroundTint="#FADAE8"
                android:scaleType="centerInside"
                android:src="@drawable/ic_person" />

            <!-- Username and Email -->
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Username: @debater_1"
                android:textColor="#222" />

            <!-- Past Debates -->
            <TextView
                android:id="@+id/past_debates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Debates Where You Were a Participant Only (Not the Creator)\n• Debate 1: 'AI in Schools' — 👍 Strong logic\n• Debate 2: 'AI in Schools' — 👍 Strong logic"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/edit_profile_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#DFFDEA"
                    android:text="✏ Edit Profile"
                    android:textColor="#AA33AA" />

                <Button
                    android:id="@+id/theme_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F7E3F4"
                    android:text="🌛 Theme"
                    android:textColor="#222" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
